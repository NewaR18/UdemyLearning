@model SetPasswordModel

<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="row">
    <div class="col-md-3">
        <partial name="_SideNavBar" />
    </div>
    <div class="col-md-9">
        <h3>Set your password</h3>
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating p-3 mt-2">
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="NewPassword" class="form-label text-dark fw-bold"></label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating p-3 mt-2">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="ConfirmPassword" class="form-label text-dark fw-bold"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Set password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}