@model RegisterModel;
@{
    ViewData["Title"] = "Create User";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form id="registerForm" class="row" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating p-3 mt-2 col-6">
                <input asp-for="Input.Name" class="form-control" aria-required="true" />
                <label asp-for="Input.Name" class="form-label text-dark fw-bold"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating p-3 mt-2 col-6">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label text-dark fw-bold"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating p-3 mt-2 col-6">
                <input asp-for="Input.Address" class="form-control" aria-required="true" />
                <label asp-for="Input.Address" class="form-label text-dark fw-bold"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating p-3 mt-2 col-6">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.PhoneNumber" class="form-label text-dark fw-bold"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating p-3 mt-2 col-12">
                Gender: &nbsp;<input asp-for="Input.Gender" class="" aria-required="true" type="radio" value="M" />&nbsp; &nbsp; Male &nbsp; &nbsp;&nbsp; &nbsp;
                <input asp-for="Input.Gender" class="" aria-required="true" type="radio" value="F" />&nbsp; &nbsp; Female
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-floating p-3 mt-2 col-6">
                <input asp-for="Input.Password" class="form-control" aria-required="true" />
                <label asp-for="Input.Password" class="form-label text-dark fw-bold"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class=" p-3 mt-2 w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
