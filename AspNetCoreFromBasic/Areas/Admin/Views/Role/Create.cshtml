@model AspNetCore.Models.ViewModel.RoleModel
<h2>Create Role</h2>
<form asp-controller="Role" asp-action="Create" method="post" class="mb-3">
    <div asp-validation-summary="All"></div>
    <div class="py-2">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br/>
    <h4>Select Role</h4>
    <div class="row">
    @for (int i = 0; i < Model.AvailableMenus.Count; i++)
    {
        var menuId = Model.AvailableMenus[i].MenuId;
        var isChecked = Model.SelectedMenuIds != null && Model.SelectedMenuIds.Contains(menuId.ToString());

        <div class="col-3">
            <label>
                    <input type="checkbox" name="SelectedMenuIds" value="@menuId"  @(isChecked ? "checked" : "" ) />
                @Model.AvailableMenus[i].Name
            </label>
        </div>
    }
    </div>
    <div>
        <input type="submit" class="btn btn-primary m-2" value="Create" />
    </div>
</form>
<a class="bg-primary text-light p-2 text-decoration-none mt-3" asp-controller="Role" asp-action="Index">Back To Index</a>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}